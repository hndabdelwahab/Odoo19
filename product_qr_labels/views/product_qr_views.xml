<odoo>
    <record id="view_product_form_qr" model="ir.ui.view">
        <field name="name">product.template.form.qr</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="QR Code &amp; Serial" name="qr_code_page">
                    <group>
                        <group>
                            <field name="product_serial_number" readonly="1" class="fw-bold"/>
                            <field name="qr_payload" readonly="1"/>
                        </group>
                        <group>
                            <field name="qr_image" widget="image" readonly="1" options="{'size': [200, 200]}"/>
                        </group>
                    </group>
                    <div class="oe_button_box" name="qr_buttons">
                        <button name="action_generate_qr_code" string="Generate QR Code" type="object" class="btn btn-primary" icon="fa-qrcode"/>
                        <button name="action_print_qr_label" string="Print QR Label" type="object" class="btn btn-secondary" icon="fa-print" invisible="not qr_image"/>
                        <button name="action_download_qr_code" string="Download QR Code" type="object" class="btn btn-secondary" icon="fa-download" invisible="not qr_image"/>
                    </div>
                </page>
            </xpath>
        </field>
    </record>
</odoo>