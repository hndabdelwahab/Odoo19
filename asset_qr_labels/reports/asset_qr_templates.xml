<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_asset_qr_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="qr-label-box">
                            <!-- QR Code -->
                            <div class="qr-code-box">
                                <img t-if="o.qr_image" t-att-src="'data:image/png;base64,%s' % o.qr_image.decode()" class="qr-code-img"/>
                            </div>

                            <!-- Serial Number Below QR -->
                            <div class="serial-below">
                                <p class="serial-text" t-esc="o.asset_serial_number"/>
                            </div>
                        </div>
                    </div>

                    <style>
                        .qr-label-box {
                            width: 3.5in;
                            height: 2.5in;
                            border: 2px solid #000;
                            padding: 0.1in;
                            margin: 0.2in;
                            display: flex;
                            flex-direction: column;
                            justify-content: center;
                            align-items: center;
                            font-family: Arial, sans-serif;
                            page-break-inside: avoid;
                        }

                        .qr-code-box {
                            display: flex;
                            justify-content: center;
                            align-items: center;
                            flex-grow: 1;
                            width: 100%;
                        }

                        .qr-code-img {
                            width: 1.8in;
                            height: 1.8in;
                            max-width: 100%;
                           
                        }

                        .serial-below {
                            text-align: center;
                            padding-top: 0.1in;
                            margin-top: 0.05in;
                            border-top: 1px solid #000;
                            width: 100%;
                        }

                        .serial-text {
                            margin: 0;
                            padding: 0.05in 0;
                            font-size: 14pt;
                            font-weight: bold;
                            letter-spacing: 2px;
                        }

                        .page {
                            display: flex;
                            justify-content: center;
                            align-items: flex-start;
                        }
                    </style>
                </t>
            </t>
        </template>
    </data>
</odoo>